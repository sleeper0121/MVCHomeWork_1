@model IEnumerable<MyMVCTest01.Models.客戶列表>

@{
    ViewBag.Title = "客戶列表";

}

<h2>客戶列表</h2>

@using (Html.BeginForm("客戶列表", "客戶資料", FormMethod.Post))
{
    <div class="form-group">
        @*@Html.LabelFor(model => model., "客戶Id", htmlAttributes: new { @class = "control-label col-md-2" })*@
        客戶類別
        <div class="col-md-10">
            @Html.DropDownList("List", ViewData["List"] as SelectList, "請選擇")
        </div>
        <br />
        <button type="submit">Search</button>
    </div>

}

    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.客戶名稱)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.聯絡人數量)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.銀行帳戶數量)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.客戶分類)
            </th>
            <th></th>
        </tr>

    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.客戶名稱)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.聯絡人數量)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.銀行帳戶數量)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.客戶分類)
            </td>
        </tr>
    }

    </table>
